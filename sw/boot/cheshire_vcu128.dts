/include/ "cheshire.dtsi"

&spi {
  boot-with = <1>;
  nor@1 {
    #address-cells = <0x1>;
    #size-cells = <0x1>;
    // Note : u-boot does not find mt25qu02g
    compatible = "mt25qu02g", "jedec,spi-nor";
    reg = <0x1>; // CS
    spi-max-frequency = <25000000>;
    spi-rx-bus-width = <0x1>;
    spi-tx-bus-width = <0x1>;
    disable-wp;
    partition@0 {
      label = "all";
      reg = <0x0 0x6000000>; // 96 MB
      read-only;
    };
  };
};
